# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
indent_style = space
indent_size = 4

[*.{js,json}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120

[package.json]
insert_final_newline = false
